<div class="col-sm-6 col-md-4">
  <div class="thumbnail">
    <%= content_tag 'div', '', class: 'event-background' %>
    <div class="thumbnail-inner event-info-inner">
      <div class="caption">
        <div class="event-description">
          <h3>
            <%= event.title %>
          </h3>
          <h3>
            <small><%= event.date %></small>
          </h3>
          <p>
            <%= event.description %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>